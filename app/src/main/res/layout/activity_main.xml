<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:orientation="horizontal"
    tools:context="com.example.kyoungcai.myview.MainActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <com.example.kyoungcai.myview.colortagview.ColorTagView
            android:id="@+id/myview"
            app:color_background="@drawable/one_selecter"
            app:textSize="11sp"
            app:textColor="#fff"
            app:paddingLeftRight="14dp"
            app:paddingTopBottom="6dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <com.example.kyoungcai.myview.colortagview.ColorTagView
            android:id="@+id/myview2"
            app:color_background="@drawable/two_selecter"
            app:textSize="11sp"
            app:textColor="#fff"
            app:paddingLeftRight="14dp"
            app:paddingTopBottom="6dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <com.example.kyoungcai.myview.colortagview.ColorTagView
            android:id="@+id/myview3"
            app:color_background="@drawable/three_selecter"
            app:textSize="11sp"
            app:textColor="#fff"
            app:paddingLeftRight="14dp"
            app:paddingTopBottom="6dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <com.example.kyoungcai.myview.colortagview.ColorTagView
            android:id="@+id/myview4"
            app:color_background="@drawable/four_selecter"
            app:textSize="11sp"
            app:textColor="#fff"
            app:paddingLeftRight="14dp"
            app:paddingTopBottom="6dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>
